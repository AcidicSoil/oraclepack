{
  "devDependencies": {
    "codefetch": "^2.2.0"
  },
  "scripts": {
    "code": "pnpm code:ticks && pnpm code:opt && pnpm code:docs && pnpm code:tui",
    "code:tui": "codefetch -t 5 --include-dir cmd,internal -o oraclepack-tui.md --max-tokens 50000 --token-limiter truncated",
    "code:temp": "codefetch -t 5 --include-dir .rules -o rules.md --max-tokens 50000",
    "build": "bash scripts/build_install_oraclepack.sh && exec bash",
    "tag": "bash scripts/tag-release.sh",
    "code:ticks": "codefetch -t 5 --include-dir .tickets -o oraclepack-tickets.md --max-tokens 50000 --token-limiter truncated",
    "code:opt": "codefetch -t 5 --include-dir oraclepack-mcp-server,internal,cmd -o oraclepack-op-mcp.md --max-tokens 75000 --token-limiter truncated",
    "scri": "bash scripts/codefetch_skill.sh",
    "code:docs": "codefetch -t 5 --include-dir docs -o oraclepack-question-responses.md --max-tokens 50000 --token-limiter truncated"
  }
}
